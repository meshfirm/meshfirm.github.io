<!-- Stylized Slack conversation mockup — pure HTML/CSS, no images except Sindre logo -->
<div class="slack-mock w-full max-w-[520px] rounded-2xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 shadow-xl shadow-gray-900/[0.04] dark:shadow-black/20 overflow-hidden select-none">

  <!-- Window chrome -->
  <div class="flex items-center gap-1.5 px-4 py-3 border-b border-gray-100 dark:border-gray-700/60">
    <span class="w-2.5 h-2.5 rounded-full bg-gray-300 dark:bg-gray-600"></span>
    <span class="w-2.5 h-2.5 rounded-full bg-gray-300 dark:bg-gray-600"></span>
    <span class="w-2.5 h-2.5 rounded-full bg-gray-300 dark:bg-gray-600"></span>
  </div>

  <!-- Channel header -->
  <div class="flex items-center gap-2 px-5 py-2.5 border-b border-gray-100 dark:border-gray-700/60">
    <span class="text-gray-400 dark:text-gray-500 text-sm font-medium">#</span>
    <span class="text-sm font-semibold text-gray-900 dark:text-white">product-team</span>
    <span class="ml-auto text-xs text-gray-400 dark:text-gray-500 hidden sm:inline">3 members</span>
  </div>

  <!-- Messages -->
  <div class="px-5 py-4 space-y-5">

    <!-- User message -->
    <div class="flex gap-3">
      <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-emerald-100 dark:bg-emerald-900/40 flex items-center justify-center">
        <span class="text-xs font-semibold text-emerald-700 dark:text-emerald-300">SC</span>
      </div>
      <div class="min-w-0">
        <div class="flex items-baseline gap-2">
          <span class="text-[13px] font-semibold text-gray-900 dark:text-white">Sarah Chen</span>
          <span class="text-[11px] text-gray-400 dark:text-gray-500">10:32 AM</span>
        </div>
        <p class="text-[13px] text-gray-700 dark:text-gray-300 leading-relaxed mt-0.5">
          <span class="text-blue-600 dark:text-blue-400 font-medium">@sindre</span> summarize last week's customer feedback
        </p>
      </div>
    </div>

    <!-- Sindre response -->
    <div class="flex gap-3">
      <div class="flex-shrink-0 w-8 h-8 rounded-lg overflow-hidden bg-brand-100 dark:bg-brand-900/40 flex items-center justify-center">
        <img src="/sindre-logo-128.png" alt="Sindre" class="w-6 h-6 rounded" />
      </div>
      <div class="min-w-0 flex-1">
        <div class="flex items-baseline gap-2">
          <span class="text-[13px] font-semibold text-gray-900 dark:text-white">Sindre</span>
          <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-400 leading-none">APP</span>
          <span class="text-[11px] text-gray-400 dark:text-gray-500">10:32 AM</span>
        </div>
        <p class="text-[13px] text-gray-700 dark:text-gray-300 leading-relaxed mt-0.5">
          Here's a summary of last week's feedback across <span class="font-medium">23 conversations</span>:
        </p>

        <!-- Structured response card -->
        <div class="mt-2.5 rounded-lg border border-gray-150 dark:border-gray-600/60 bg-gray-50 dark:bg-gray-700/40 overflow-hidden">
          <div class="px-3.5 py-2 border-b border-gray-150 dark:border-gray-600/40">
            <span class="text-[11px] font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Top themes</span>
          </div>
          <div class="divide-y divide-gray-100 dark:divide-gray-600/30">
            <div class="flex items-center justify-between px-3.5 py-2">
              <div class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 rounded-full bg-gray-900 dark:bg-white"></span>
                <span class="text-[13px] text-gray-700 dark:text-gray-300">Faster onboarding flow</span>
              </div>
              <span class="text-[12px] font-medium text-gray-500 dark:text-gray-400 tabular-nums">12</span>
            </div>
            <div class="flex items-center justify-between px-3.5 py-2">
              <div class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 rounded-full bg-gray-400 dark:bg-gray-500"></span>
                <span class="text-[13px] text-gray-700 dark:text-gray-300">Mobile experience</span>
              </div>
              <span class="text-[12px] font-medium text-gray-500 dark:text-gray-400 tabular-nums">8</span>
            </div>
            <div class="flex items-center justify-between px-3.5 py-2">
              <div class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 rounded-full bg-gray-300 dark:bg-gray-600"></span>
                <span class="text-[13px] text-gray-700 dark:text-gray-300">Better search</span>
              </div>
              <span class="text-[12px] font-medium text-gray-500 dark:text-gray-400 tabular-nums">6</span>
            </div>
          </div>
        </div>

        <!-- Action indicator -->
        <div class="flex items-center gap-1.5 mt-2.5">
          <svg class="w-3.5 h-3.5 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span class="text-[12px] text-gray-500 dark:text-gray-400">Insight saved: <span class="font-medium text-gray-700 dark:text-gray-300">"Weekly feedback summary — W4"</span></span>
        </div>
      </div>
    </div>

  </div>

  <!-- Message input bar -->
  <div class="px-5 pb-4">
    <div class="flex items-center gap-2 px-3.5 py-2.5 rounded-lg border border-gray-200 dark:border-gray-600/60 bg-white dark:bg-gray-700/30">
      <svg class="w-4 h-4 text-gray-400 dark:text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
      </svg>
      <span class="text-[13px] text-gray-400 dark:text-gray-500">Message #product-team</span>
    </div>
  </div>

</div>

<style>
  .slack-mock {
    font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, sans-serif;
  }
  /* Fix for border color shade not in default Tailwind */
  .border-gray-150 {
    border-color: #E8EAED;
  }
  .dark .border-gray-150 {
    border-color: rgba(75, 85, 99, 0.6);
  }
