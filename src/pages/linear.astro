---
import Layout from '../layouts/Layout.astro';
import PrimaryCTA from '../components/PrimaryCTA.astro';
import GeneralFAQ from '../components/GeneralFAQ.astro';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import LinearMockup from '../components/LinearMockup.astro';
---

<Layout>
  <Navbar />

  <!-- Page wrapper with Inter font -->
  <div class="linear-page">

  <!-- Hero Section -->
  <section class="relative bg-white dark:bg-gray-900 overflow-hidden">
    <!-- Norse-inspired diamond lattice background -->
    <div class="absolute inset-0 opacity-[0.025] dark:opacity-[0.04] pointer-events-none">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <pattern id="norse-lattice" x="0" y="0" width="56" height="56" patternUnits="userSpaceOnUse">
          <path d="M28 0 L56 28 L28 56 L0 28Z" fill="none" stroke="#6B7280" stroke-width="0.6"/>
        </pattern>
        <rect width="100%" height="100%" fill="url(#norse-lattice)" />
      </svg>
    </div>

    <div class="relative pt-28 pb-16 px-4 mx-auto max-w-screen-xl lg:pt-36 lg:pb-28">
      <div class="grid gap-12 items-center lg:grid-cols-2">
        <!-- Text -->
        <div class="max-w-xl">
          <div class="reveal inline-flex items-center gap-2 px-3 py-1.5 mb-8 rounded-full bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
            <img src="/Linear.png" class="w-4 h-4" alt="Linear" />
            <span class="text-sm font-medium text-gray-600 dark:text-gray-300">Linear Integration</span>
          </div>

          <h1 class="reveal rd1 font-display text-5xl md:text-6xl xl:text-7xl leading-[1.08] tracking-tight text-gray-900 dark:text-white mb-6">
            Turn tickets into<br/>
            <span class="text-brand-600 dark:text-brand-400">impact-focused</span> work
          </h1>

          <p class="reveal rd2 text-lg text-gray-500 dark:text-gray-400 mb-10 max-w-lg leading-relaxed">
            Just @mention Sindre in Linear to ground issues in customer insights, break work into smaller tasks, and prioritize by impact.
          </p>

          <div class="reveal rd3 flex flex-wrap gap-3">
            <a href="https://app.sindre.ai/signup"
               class="inline-flex items-center px-6 py-3 text-white bg-brand-700 hover:bg-brand-800 rounded-lg font-medium transition-colors focus:ring-4 focus:ring-brand-200 dark:focus:ring-brand-900">
              Get started free
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="/linear-setup"
               class="inline-flex items-center px-6 py-3 text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg font-medium transition-colors">
              Setup guide
            </a>
          </div>
        </div>

        <!-- Hero visual -->
        <div class="reveal rd2 flex justify-center lg:justify-end">
          <div class="relative">
            <div class="hero-float">
              <LinearMockup />
            </div>
            <!-- Offset decorative panel -->
            <div class="absolute -z-10 -bottom-3 -right-3 w-full h-full rounded-2xl bg-gray-200/60 dark:bg-gray-700/20"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Divider -->
  <div class="norse-divider mx-auto max-w-screen-lg"></div>

  <!-- Features Section -->
  <section class="bg-white dark:bg-gray-900">
    <div class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24">
      <div class="text-center mb-14">
        <h2 class="reveal font-display text-3xl md:text-5xl text-gray-900 dark:text-white mb-4">
          Built for how you work
        </h2>
        <p class="reveal rd1 text-gray-500 dark:text-gray-400 text-lg max-w-xl mx-auto">
          Four powerful capabilities that make every Linear ticket customer-driven.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-5">
        <!-- Feature 1: @Sindre -->
        <div class="feature-card reveal rd1 group p-8 rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/40">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700/50 transition-colors group-hover:bg-gray-200 dark:group-hover:bg-gray-700">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 5h4.5a3.5 3.5 0 1 1 0 7H8v7M8 12h4.5"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Just @Sindre</h3>
          </div>
          <p class="text-gray-500 dark:text-gray-400 leading-relaxed">
            Mention @Sindre in any issue or comment. Sindre reads the full context and responds directly in Linear&mdash;no tab-switching required.
          </p>
        </div>

        <!-- Feature 2: Customer Insights -->
        <div class="feature-card reveal rd2 group p-8 rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/40">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700/50 transition-colors group-hover:bg-gray-200 dark:group-hover:bg-gray-700">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.872 9.687 20 6.56 17.44 4 4 17.44 6.56 20 16.873 9.687Zm0 0-2.56-2.56M6 7v2m0 0v2m0-2H4m2 0h2m7 7v2m0 0v2m0-2h-2m2 0h2"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Ground in Customer Insights</h3>
          </div>
          <p class="text-gray-500 dark:text-gray-400 leading-relaxed">
            Connect every ticket to real customer feedback and business impact. No more vague requirements&mdash;every issue has a clear "why."
          </p>
        </div>

        <!-- Feature 3: Smaller Tasks -->
        <div class="feature-card reveal rd3 group p-8 rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/40">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700/50 transition-colors group-hover:bg-gray-200 dark:group-hover:bg-gray-700">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.083 5.104c.35-.8 1.485-.8 1.834 0l1.752 4.022a1 1 0 0 0 .84.597l4.463.342c.9.069 1.255 1.2.556 1.771l-3.33 2.723a1 1 0 0 0-.337 1.016l1.03 4.119c.214.858-.71 1.552-1.474 1.106l-3.913-2.281a1 1 0 0 0-1.008 0L7.583 20.8c-.764.446-1.688-.248-1.474-1.106l1.03-4.119A1 1 0 0 0 6.8 14.56l-3.33-2.723c-.698-.571-.342-1.702.557-1.771l4.462-.342a1 1 0 0 0 .84-.597l1.753-4.022Z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Ship Faster with Smaller Tasks</h3>
          </div>
          <p class="text-gray-500 dark:text-gray-400 leading-relaxed">
            Break large features into smaller, testable tasks. Deliver value to users sooner and accelerate learning with faster feedback loops.
          </p>
        </div>

        <!-- Feature 4: Prioritize -->
        <div class="feature-card reveal rd4 group p-8 rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/40">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700/50 transition-colors group-hover:bg-gray-200 dark:group-hover:bg-gray-700">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21a9 9 0 1 1 0-18c1.052 0 2.062.18 3 .512M7 9.577l3.923 3.923 8.5-8.5M17 14v6m-3-3h6"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Prioritize by Impact</h3>
          </div>
          <p class="text-gray-500 dark:text-gray-400 leading-relaxed">
            Get impact and effort scoring for your backlog. Focus your team on work that actually moves the needle.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="bg-gray-50 dark:bg-gray-800/50">
    <div class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24">
      <div class="text-center mb-16">
        <h2 class="reveal font-display text-3xl md:text-5xl text-gray-900 dark:text-white mb-4">
          How it works
        </h2>
        <p class="reveal rd1 text-gray-500 dark:text-gray-400 text-lg">
          Sindre acts only when prompted and respects your workspace permissions.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-8">
        <!-- Step 1 -->
        <div class="reveal rd1 relative">
          <span class="step-num font-display text-6xl leading-none text-gray-200 dark:text-gray-700 select-none">01</span>
          <h3 class="mt-3 text-lg font-semibold text-gray-900 dark:text-white">Mention or Assign</h3>
          <p class="mt-2 text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
            Mention @Sindre in an issue comment or assign an issue to Sindre. Sindre analyzes the issue context including title, comments, assignees, and linked issues.
          </p>
        </div>

        <!-- Step 2 -->
        <div class="reveal rd2 relative">
          <span class="step-num font-display text-6xl leading-none text-gray-200 dark:text-gray-700 select-none">02</span>
          <h3 class="mt-3 text-lg font-semibold text-gray-900 dark:text-white">Structured Output</h3>
          <p class="mt-2 text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
            Sindre produces concise summaries, clear acceptance criteria, suggested labels, and recommended assignees based on your workspace data.
          </p>
        </div>

        <!-- Step 3 -->
        <div class="reveal rd3 relative">
          <span class="step-num font-display text-6xl leading-none text-gray-200 dark:text-gray-700 select-none">03</span>
          <h3 class="mt-3 text-lg font-semibold text-gray-900 dark:text-white">Extract & Link</h3>
          <p class="mt-2 text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
            Extract action items and create linked issues, or convert meeting notes into Linear tickets, keeping related work connected.
          </p>
        </div>

        <!-- Step 4 -->
        <div class="reveal rd4 relative">
          <span class="step-num font-display text-6xl leading-none text-gray-200 dark:text-gray-700 select-none">04</span>
          <h3 class="mt-3 text-lg font-semibold text-gray-900 dark:text-white">Transparent History</h3>
          <p class="mt-2 text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
            All changes are recorded in Linear so teams can review what changed. Sindre performs actions according to the connected account's permissions.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="bg-white dark:bg-gray-900">
    <div class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24">
      <div class="text-center mb-14">
        <h2 class="reveal font-display text-3xl md:text-5xl text-gray-900 dark:text-white mb-4">
          What you can do
        </h2>
        <p class="reveal rd1 text-gray-500 dark:text-gray-400 text-lg max-w-xl mx-auto">
          See how teams use Sindre to get more done in Linear.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-10">
        <!-- Use Case 1 -->
        <div class="reveal rd1 text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v13m0-13c-2.8-.8-4.7-1-8-1a1 1 0 0 0-1 1v11c0 .6.5 1 1 1 3.2 0 5 .2 8 1m0-13c2.8-.8 4.7-1 8-1 .6 0 1 .5 1 1v11c0 .6-.5 1-1 1-3.2 0-5 .2-8 1"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Enrich Vague Tickets</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Turn a one-line ticket into a structured brief with customer context and clear acceptance criteria.</p>
        </div>

        <!-- Use Case 2 -->
        <div class="reveal rd2 text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 8v8m0-8a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm0 8a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm8-8a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm0 0v4a2 2 0 0 1-2 2h-2"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Break Down Epics</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Split large features into smaller, independently shippable tasks with clear scope and linked dependencies.</p>
        </div>

        <!-- Use Case 3 -->
        <div class="reveal rd3 text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 5v14m-8-7h2m4 0h2M6 7h4a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V8a1 1 0 0 1 1-1Zm8 0h4a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1V8a1 1 0 0 1 1-1Z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Prioritize Your Backlog</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Get impact and effort assessments to help your team stack-rank work based on value delivered.</p>
        </div>

        <!-- Use Case 4 -->
        <div class="reveal rd4 text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 9l3 3m0 0l3-3m-3 3v8m0-12a9 9 0 1 1 0 18 9 9 0 0 1 0-18Z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Capture Action Items</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Extract decisions and next steps from long comment threads and turn them into linked tasks automatically.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative bg-gray-900 dark:bg-gray-800 overflow-hidden">
    <!-- Lattice overlay -->
    <div class="absolute inset-0 opacity-[0.05] pointer-events-none">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <pattern id="cta-lattice" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M20 0 L40 20 L20 40 L0 20Z" fill="none" stroke="white" stroke-width="0.5"/>
        </pattern>
        <rect width="100%" height="100%" fill="url(#cta-lattice)" />
      </svg>
    </div>

    <div class="relative py-16 px-4 mx-auto max-w-screen-xl lg:py-20">
      <div class="max-w-screen-md mx-auto text-center">
        <h2 class="reveal font-display text-3xl md:text-5xl text-white mb-4">
          Ready to get started?
        </h2>
        <p class="reveal rd1 text-gray-400 text-lg mb-10">
          Turn your Linear tickets into customer-driven, impact-focused work. Setup takes under 5 minutes.
        </p>
        <div class="reveal rd2 flex flex-col sm:flex-row items-center justify-center gap-3">
          <a href="https://app.sindre.ai/signup"
             class="inline-flex items-center px-6 py-3 text-white bg-brand-700 hover:bg-brand-800 rounded-lg font-medium transition-colors">
            Get started free
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="/linear-setup"
             class="inline-flex items-center px-6 py-3 text-gray-300 border border-gray-600 hover:bg-gray-800 dark:hover:bg-gray-700 rounded-lg font-medium transition-colors">
            View setup guide
          </a>
        </div>
      </div>
    </div>
  </section>

  </div><!-- end linear-page -->

  <GeneralFAQ />

  <PrimaryCTA />

  <Footer />
</Layout>

<!-- Global styles: font + animations -->
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  /* Inter as the page text font */
  .linear-page {
    font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, sans-serif;
  }

  /* Display font for headings */
  .font-display {
    font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, sans-serif;
    font-weight: 600;
  }

  /* Thin divider line */
  .norse-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, #9CA3AF, transparent);
    opacity: 0.3;
  }
  .dark .norse-divider {
    opacity: 0.15;
  }

  /* Scroll-reveal base state */
  .reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.7s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Staggered reveal delays */
  .rd1 { transition-delay: 0.1s; }
  .rd2 { transition-delay: 0.2s; }
  .rd3 { transition-delay: 0.3s; }
  .rd4 { transition-delay: 0.4s; }

  /* Hero image float */
  @keyframes gentle-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
  }
  .hero-float {
    animation: gentle-float 5s ease-in-out infinite;
  }

  /* Feature card interaction */
  .feature-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .feature-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
  }
  .dark .feature-card:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
  }
</style>

<!-- Scroll-reveal observer -->
<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    },
    { threshold: 0.1, rootMargin: '0px 0px -32px 0px' }
  );

  document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
</script>
