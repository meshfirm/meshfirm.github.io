---
import Layout from '../layouts/Layout.astro';
import PrimaryCTA from '../components/PrimaryCTA.astro';
import GeneralFAQ from '../components/GeneralFAQ.astro';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import SlackMockup from '../components/SlackMockup.astro';
---

<Layout>
  <Navbar />

  <!-- Page wrapper with Inter font -->
  <div class="slack-page">

  <!-- Hero Section -->
  <section class="relative bg-white dark:bg-gray-900 overflow-hidden">
    <!-- Norse-inspired diamond lattice background -->
    <div class="absolute inset-0 opacity-[0.025] dark:opacity-[0.04] pointer-events-none">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <pattern id="norse-lattice" x="0" y="0" width="56" height="56" patternUnits="userSpaceOnUse">
          <path d="M28 0 L56 28 L28 56 L0 28Z" fill="none" stroke="#6B7280" stroke-width="0.6"/>
        </pattern>
        <rect width="100%" height="100%" fill="url(#norse-lattice)" />
      </svg>
    </div>

    <div class="relative pt-28 pb-16 px-4 mx-auto max-w-screen-xl lg:pt-36 lg:pb-28">
      <div class="grid gap-12 items-center lg:grid-cols-2">
        <!-- Text -->
        <div class="max-w-xl">
          <div class="reveal inline-flex items-center gap-2 px-3 py-1.5 mb-8 rounded-full bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
            <img src="/slack.png" class="w-4 h-4" alt="Slack" />
            <span class="text-sm font-medium text-gray-600 dark:text-gray-300">Slack Integration</span>
          </div>

          <h1 class="reveal rd1 font-display text-5xl md:text-6xl xl:text-7xl leading-[1.08] tracking-tight text-gray-900 dark:text-white mb-6">
            Your AI assistant,<br/>
            <span class="text-brand-600 dark:text-brand-400">right where</span> you work
          </h1>

          <p class="reveal rd2 text-lg text-gray-500 dark:text-gray-400 mb-10 max-w-lg leading-relaxed">
            Chat with Sindre, capture insights, create tasks, and search your workspace&mdash;all without leaving Slack.
          </p>

          <div class="reveal rd3 flex flex-wrap gap-3">
            <a href="https://app.sindre.ai/signup"
               class="inline-flex items-center px-6 py-3 text-white bg-brand-700 hover:bg-brand-800 rounded-lg font-medium transition-colors focus:ring-4 focus:ring-brand-200 dark:focus:ring-brand-900">
              Get started free
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="/slack-setup"
               class="inline-flex items-center px-6 py-3 text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg font-medium transition-colors">
              Setup guide
            </a>
          </div>
        </div>

        <!-- Hero visual -->
        <div class="reveal rd2 flex justify-center lg:justify-end">
          <div class="relative">
            <div class="hero-float">
              <SlackMockup />
            </div>
            <!-- Offset decorative panel -->
            <div class="absolute -z-10 -bottom-3 -right-3 w-full h-full rounded-2xl bg-gray-200/60 dark:bg-gray-700/20"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Divider -->
  <div class="norse-divider mx-auto max-w-screen-lg"></div>

  <!-- Features Section -->
  <section class="bg-white dark:bg-gray-900">
    <div class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24">
      <div class="text-center mb-14">
        <h2 class="reveal font-display text-3xl md:text-5xl text-gray-900 dark:text-white mb-4">
          Crafted for your workflow
        </h2>
        <p class="reveal rd1 text-gray-500 dark:text-gray-400 text-lg max-w-xl mx-auto">
          Four powerful capabilities that turn Slack into your command center.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-5">
        <!-- Feature 1: AI Chat -->
        <div class="feature-card reveal rd1 group p-8 rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/40">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700/50 transition-colors group-hover:bg-gray-200 dark:group-hover:bg-gray-700">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17h6l3 3v-3h2V9h-2M4 4h11v8H9l-3 3v-3H4V4Z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">AI Chat in Threads</h3>
          </div>
          <p class="text-gray-500 dark:text-gray-400 leading-relaxed">
            Chat with Sindre directly in Slack threads. Get answers, brainstorm ideas, and work through problems&mdash;with full context memory across conversations.
          </p>
        </div>

        <!-- Feature 2: Slash Commands -->
        <div class="feature-card reveal rd2 group p-8 rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/40">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700/50 transition-colors group-hover:bg-gray-200 dark:group-hover:bg-gray-700">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m10.051 8.102-3.778.322-1.994 1.994a.94.94 0 0 0 .533 1.6l2.698.316m8.39 1.617-.322 3.778-1.994 1.994a.94.94 0 0 1-1.595-.533l-.4-2.615m8.166-9.212c0 2.327-1.886 3.735-2.903 4.565l-5.364 4.359-1.59-1.59L14.03 7.639c.83-1.017 2.238-2.903 4.565-2.903.552 0 1 .448 1 1Z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Slash Commands</h3>
          </div>
          <p class="text-gray-500 dark:text-gray-400 leading-relaxed">
            Use <code class="text-sm font-mono bg-gray-200/80 dark:bg-gray-700 px-1.5 py-0.5 rounded text-gray-700 dark:text-gray-300">/sindre</code> to create tasks, documents, and insights instantly. No context switching required.
          </p>
        </div>

        <!-- Feature 3: Message Capture -->
        <div class="feature-card reveal rd3 group p-8 rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/40">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700/50 transition-colors group-hover:bg-gray-200 dark:group-hover:bg-gray-700">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21a9 9 0 1 1 0-18c1.052 0 2.062.18 3 .512M7 9.577l3.923 3.923 8.5-8.5M17 14v6m-3-3h6"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Message Capture</h3>
          </div>
          <p class="text-gray-500 dark:text-gray-400 leading-relaxed">
            React with an emoji or use shortcuts to capture messages as tasks or insights. Turn conversations into action effortlessly.
          </p>
        </div>

        <!-- Feature 4: Semantic Search -->
        <div class="feature-card reveal rd4 group p-8 rounded-xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/40">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700/50 transition-colors group-hover:bg-gray-200 dark:group-hover:bg-gray-700">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-width="1.5" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Semantic Search</h3>
          </div>
          <p class="text-gray-500 dark:text-gray-400 leading-relaxed">
            Search your entire Sindre workspace from Slack. Find tasks, documents, and insights with natural language queries.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="bg-gray-50 dark:bg-gray-800/50">
    <div class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24">
      <div class="text-center mb-16">
        <h2 class="reveal font-display text-3xl md:text-5xl text-gray-900 dark:text-white mb-4">
          Up and running in minutes
        </h2>
        <p class="reveal rd1 text-gray-500 dark:text-gray-400 text-lg">
          Four simple steps. No configuration headaches.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-8">
        <!-- Step 1 -->
        <div class="reveal rd1 relative">
          <span class="step-num font-display text-6xl leading-none text-gray-200 dark:text-gray-700 select-none">01</span>
          <h3 class="mt-3 text-lg font-semibold text-gray-900 dark:text-white">Connect</h3>
          <p class="mt-2 text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
            Install the Sindre app via OAuth from your settings. One click to authorize your Slack workspace.
          </p>
        </div>

        <!-- Step 2 -->
        <div class="reveal rd2 relative">
          <span class="step-num font-display text-6xl leading-none text-gray-200 dark:text-gray-700 select-none">02</span>
          <h3 class="mt-3 text-lg font-semibold text-gray-900 dark:text-white">Chat</h3>
          <p class="mt-2 text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
            @mention Sindre in any channel to start a conversation, or use slash commands for quick actions.
          </p>
        </div>

        <!-- Step 3 -->
        <div class="reveal rd3 relative">
          <span class="step-num font-display text-6xl leading-none text-gray-200 dark:text-gray-700 select-none">03</span>
          <h3 class="mt-3 text-lg font-semibold text-gray-900 dark:text-white">Capture</h3>
          <p class="mt-2 text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
            Turn messages into tasks and insights with emoji reactions or message shortcuts.
          </p>
        </div>

        <!-- Step 4 -->
        <div class="reveal rd4 relative">
          <span class="step-num font-display text-6xl leading-none text-gray-200 dark:text-gray-700 select-none">04</span>
          <h3 class="mt-3 text-lg font-semibold text-gray-900 dark:text-white">Stay aligned</h3>
          <p class="mt-2 text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
            Receive task updates, mentions, and weekly summaries delivered directly in Slack.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="bg-white dark:bg-gray-900">
    <div class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24">
      <div class="text-center mb-14">
        <h2 class="reveal font-display text-3xl md:text-5xl text-gray-900 dark:text-white mb-4">
          Built for real workflows
        </h2>
        <p class="reveal rd1 text-gray-500 dark:text-gray-400 text-lg max-w-xl mx-auto">
          See how teams use Sindre in Slack every day.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-10">
        <!-- Use Case 1 -->
        <div class="reveal rd1 text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7.556 8.5h8m-8 3.5H12m7.111-7H4.89a.896.896 0 0 0-.629.256.868.868 0 0 0-.26.619v9.25c0 .232.094.455.26.619A.896.896 0 0 0 4.89 16H9l3 4 3-4h4.111a.896.896 0 0 0 .629-.256.868.868 0 0 0 .26-.619v-9.25a.868.868 0 0 0-.26-.619.896.896 0 0 0-.63-.256Z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Capture Feedback</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">React to messages with customer feedback to save them as insights automatically.</p>
        </div>

        <!-- Use Case 2 -->
        <div class="reveal rd2 text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 4h3a1 1 0 0 1 1 1v15a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h3m0 3h6m-6 5h6m-6 4h6M10 3v4h4V3h-4Z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Create Action Items</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Turn discussion threads into trackable tasks with a single command or emoji reaction.</p>
        </div>

        <!-- Use Case 3 -->
        <div class="reveal rd3 text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-width="1.5" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Search Everything</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Find any task, document, or insight across your workspace with natural language.</p>
        </div>

        <!-- Use Case 4 -->
        <div class="reveal rd4 text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 5.365V3m0 2.365a5.338 5.338 0 0 1 5.133 5.368v1.8c0 2.386 1.867 2.982 1.867 4.175 0 .593 0 1.292-.538 1.292H5.538C5 18.6 5 17.901 5 17.308c0-1.193 1.867-1.789 1.867-4.175v-1.8A5.338 5.338 0 0 1 12 5.365ZM8.733 18.6A3.13 3.13 0 0 0 12 21a3.13 3.13 0 0 0 3.267-2.4H8.733Z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Stay Aligned</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Get weekly summaries and task updates delivered right to Slack.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative bg-gray-900 dark:bg-gray-800 overflow-hidden">
    <!-- Lattice overlay -->
    <div class="absolute inset-0 opacity-[0.05] pointer-events-none">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <pattern id="cta-lattice" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M20 0 L40 20 L20 40 L0 20Z" fill="none" stroke="white" stroke-width="0.5"/>
        </pattern>
        <rect width="100%" height="100%" fill="url(#cta-lattice)" />
      </svg>
    </div>

    <div class="relative py-16 px-4 mx-auto max-w-screen-xl lg:py-20">
      <div class="max-w-screen-md mx-auto text-center">
        <h2 class="reveal font-display text-3xl md:text-5xl text-white mb-4">
          Ready to get started?
        </h2>
        <p class="reveal rd1 text-gray-400 text-lg mb-10">
          Bring AI-powered productivity to your Slack workspace. Setup takes under 5 minutes.
        </p>
        <div class="reveal rd2 flex flex-col sm:flex-row items-center justify-center gap-3">
          <a href="https://app.sindre.ai/signup"
             class="inline-flex items-center px-6 py-3 text-white bg-brand-700 hover:bg-brand-800 rounded-lg font-medium transition-colors">
            Get started free
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="/slack-setup"
             class="inline-flex items-center px-6 py-3 text-gray-300 border border-gray-600 hover:bg-gray-800 dark:hover:bg-gray-700 rounded-lg font-medium transition-colors">
            View setup guide
          </a>
        </div>
      </div>
    </div>
  </section>

  </div><!-- end slack-page -->

  <GeneralFAQ />

  <PrimaryCTA />

  <Footer />
</Layout>

<!-- Global styles: font + animations -->
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  /* Inter as the page text font */
  .slack-page {
    font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, sans-serif;
  }

  /* Display font for headings */
  .font-display {
    font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, sans-serif;
    font-weight: 600;
  }

  /* Thin divider line */
  .norse-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, #9CA3AF, transparent);
    opacity: 0.3;
  }
  .dark .norse-divider {
    opacity: 0.15;
  }

  /* Scroll-reveal base state */
  .reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.7s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Staggered reveal delays */
  .rd1 { transition-delay: 0.1s; }
  .rd2 { transition-delay: 0.2s; }
  .rd3 { transition-delay: 0.3s; }
  .rd4 { transition-delay: 0.4s; }

  /* Hero image float */
  @keyframes gentle-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
  }
  .hero-float {
    animation: gentle-float 5s ease-in-out infinite;
  }

  /* Feature card interaction */
  .feature-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .feature-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
  }
  .dark .feature-card:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
  }
</style>

<!-- Scroll-reveal observer -->
<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    },
    { threshold: 0.1, rootMargin: '0px 0px -32px 0px' }
  );

  document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
</script>
