---
import Layout from '../layouts/Layout.astro';

import PrimaryCTA from '../components/PrimaryCTA.astro';
import GeneralFAQ from '../components/GeneralFAQ.astro';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout>
  <Navbar />

  <body>
    <!-- Hero Section start -->
    <section class="bg-white dark:bg-gray-900">
        <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 mt-10">

            <div class="grid gap-8 items-center mb-8 lg:mb-24 lg:gap-12 lg:grid-cols-12">
                <div class="col-span-6 text-left sm:mb-6 lg:text-left lg:mb-0">
                    <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl xl:text-6xl dark:text-white">
                        Bring AI-Powered Productivity to Your Slack Workspace
                    </h1>
                    <p class="mb-6 max-w-xl font-light text-gray-500 xl:mb-8 md:text-lg xl:text-xl dark:text-gray-400">
                        Chat with Sindre, capture insights from messages, create tasks with slash commands, and search your entire workspace - all without leaving Slack.
                    </p>
                    <button type="submit" class="w-full sm:w-auto justify-center text-white bg-brand-800 hover:bg-brand-600 focus:ring-4 focus:outline-none focus:ring-brand-100 font-medium rounded-lg px-5 py-2.5 text-center inline-flex items-center dark:bg-brand-800 dark:hover:bg-brand-600 dark:focus:ring-brand-800">
                        <a href="https://app.sindre.ai/signup" class="flex items-center text-white no-underline">
                            Get started
                        </a>
                    </button>
                </div>
                <div class="col-span-6 flex justify-end items-center">
                    <img class="rounded-lg shrink-0 w-[600px] h-[400px] relative" style="object-fit: cover" src="/slack-x-sindre.png" alt="Sindre AI for Slack" />
                </div>
            </div>

            <!-- Hero's Features Section -->
            <div class="grid lg:grid-cols-4 gap-12">

                <!-- Feature 1 -->
                <div class="grid grid-cols-[auto_1fr]">
                    <div class="flex justify-center items-top w-10 h-10 lg:h-12 lg:w-12">
                        <svg class="w-5 h-5 text-brand-800 lg:w-6 lg:h-6 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17h6l3 3v-3h2V9h-2M4 4h11v8H9l-3 3v-3H4V4Z"/>
                        </svg>
                    </div>
                    <div class="space-y-2">
                        <h3 class="text-xl font-bold dark:text-white">AI Chat in Threads</h3>
                        <p class="text-gray-500 dark:text-gray-400">Chat with Sindre directly in Slack threads with full context memory. Get answers, brainstorm ideas, and work through problems conversationally.
                        </p>
                    </div>
                </div>

                <!-- Feature 2 -->
                <div class="grid grid-cols-[auto_1fr]">
                    <div class="flex justify-center items-top w-10 h-10 lg:h-12 lg:w-12">
                        <svg class="w-5 h-5 text-brand-800 lg:w-6 lg:h-6 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m10.051 8.102-3.778.322-1.994 1.994a.94.94 0 0 0 .533 1.6l2.698.316m8.39 1.617-.322 3.778-1.994 1.994a.94.94 0 0 1-1.595-.533l-.4-2.615m8.166-9.212c0 2.327-1.886 3.735-2.903 4.565l-5.364 4.359-1.59-1.59L14.03 7.639c.83-1.017 2.238-2.903 4.565-2.903.552 0 1 .448 1 1Z"/>
                        </svg>
                    </div>
                    <div class="space-y-2">
                        <h3 class="text-xl font-bold dark:text-white">Slash Command Creation</h3>
                        <p class="text-gray-500 dark:text-gray-400">Use /sindre to create tasks, documents, and insights instantly via clean modals. No context switching required.
                        </p>
                    </div>
                </div>

                <!-- Feature 3 -->
                <div class="grid grid-cols-[auto_1fr]">
                    <div class="flex justify-center items-top w-10 h-10 lg:h-12 lg:w-12">
                        <svg class="w-5 h-5 text-brand-800 lg:w-6 lg:h-6 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21a9 9 0 1 1 0-18c1.052 0 2.062.18 3 .512M7 9.577l3.923 3.923 8.5-8.5M17 14v6m-3-3h6"/>
                        </svg>
                    </div>
                    <div class="space-y-2">
                        <h3 class="text-xl font-bold dark:text-white">Message Capture</h3>
                        <p class="text-gray-500 dark:text-gray-400">React to messages with emoji or use shortcuts to capture them as tasks or insights. Turn conversations into action.
                        </p>
                    </div>
                </div>

                <!-- Feature 4 -->
                <div class="grid grid-cols-[auto_1fr]">
                    <div class="flex justify-center items-top w-10 h-10 lg:h-12 lg:w-12">
                        <svg class="w-5 h-5 text-brand-800 lg:w-6 lg:h-6 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
                        </svg>
                    </div>
                    <div class="space-y-2">
                        <h3 class="text-xl font-bold dark:text-white">Semantic Search</h3>
                        <p class="text-gray-500 dark:text-gray-400">Search your entire Sindre workspace from within Slack. Find tasks, documents, and insights with natural language queries.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section end -->

    <!-- How It Works Section start -->
    <section class="bg-gray-50 dark:bg-gray-800">
        <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
            <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-16">
                <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">How It Works</h2>
                <p class="font-light text-gray-500 dark:text-gray-400 sm:text-xl">Sindre integrates seamlessly with your Slack workspace and respects your workspace permissions.</p>
            </div>
            <div class="space-y-8 md:grid grid-cols-2 md:gap-8 xl:gap-8 md:space-y-0">
                <div class="p-6 bg-white rounded shadow dark:bg-gray-900">
                    <div
                        class="flex justify-center items-center mb-4 w-10 h-10 rounded bg-brand-100 lg:h-12 lg:w-12 dark:bg-brand-800">
                        <svg class="w-5 h-5 text-brand-800 lg:w-6 lg:h-6 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"/>
                        </svg>
                    </div>
                    <h3 class="mb-2 text-xl font-bold dark:text-white">Connect Your Workspace</h3>
                    <p class="font-light text-gray-500 dark:text-gray-400">Install the Sindre app via OAuth from your Sindre settings. Authorize access to your Slack workspace with a single click.</p>
                </div>
                <div class="p-6 bg-white rounded shadow dark:bg-gray-900">
                    <div
                        class="flex justify-center items-center mb-4 w-10 h-10 rounded bg-brand-100 lg:h-12 lg:w-12 dark:bg-brand-800">
                        <svg class="w-5 h-5 text-brand-800 lg:w-6 lg:h-6 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17h6l3 3v-3h2V9h-2M4 4h11v8H9l-3 3v-3H4V4Z"/>
                        </svg>
                    </div>
                    <h3 class="mb-2 text-xl font-bold dark:text-white">Chat or Command</h3>
                    <p class="font-light text-gray-500 dark:text-gray-400">@mention Sindre in any channel to start a conversation, or use slash commands like /sindre create task for quick actions.</p>
                </div>
                <div class="p-6 bg-white rounded shadow dark:bg-gray-900">
                    <div
                        class="flex justify-center items-center mb-4 w-10 h-10 rounded bg-brand-100 lg:h-12 lg:w-12 dark:bg-brand-800">
                        <svg class="w-5 h-5 text-brand-800 lg:w-6 lg:h-6 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21a9 9 0 1 1 0-18c1.052 0 2.062.18 3 .512M7 9.577l3.923 3.923 8.5-8.5M17 14v6m-3-3h6"/>
                        </svg>
                    </div>
                    <h3 class="mb-2 text-xl font-bold dark:text-white">Capture & Create</h3>
                    <p class="font-light text-gray-500 dark:text-gray-400">Turn Slack messages into tasks, insights, or documents with emoji reactions or message shortcuts. Keep important information from getting lost.</p>
                </div>
                <div class="p-6 bg-white rounded shadow dark:bg-gray-900">
                    <div
                        class="flex justify-center items-center mb-4 w-10 h-10 rounded bg-brand-100 lg:h-12 lg:w-12 dark:bg-brand-800">
                        <svg class="w-5 h-5 text-brand-800 lg:w-6 lg:h-6 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5.365V3m0 2.365a5.338 5.338 0 0 1 5.133 5.368v1.8c0 2.386 1.867 2.982 1.867 4.175 0 .593 0 1.292-.538 1.292H5.538C5 18.6 5 17.901 5 17.308c0-1.193 1.867-1.789 1.867-4.175v-1.8A5.338 5.338 0 0 1 12 5.365ZM8.733 18.6A3.13 3.13 0 0 0 12 21a3.13 3.13 0 0 0 3.267-2.4H8.733Z"/>
                        </svg>
                    </div>
                    <h3 class="mb-2 text-xl font-bold dark:text-white">Stay Notified</h3>
                    <p class="font-light text-gray-500 dark:text-gray-400">Receive task updates, mentions, and weekly summaries directly in Slack. Customize notifications to match your workflow.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- How It Works Section end -->

    <!-- Use Cases Section start -->
    <section class="bg-white dark:bg-gray-900">
        <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
            <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-16">
                <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">What You Can Do</h2>
                <p class="font-light text-gray-500 dark:text-gray-400 sm:text-xl">See how teams use Sindre in Slack to stay productive.</p>
            </div>
            <div class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-4 md:gap-8 md:space-y-0">
                <!-- Use Case 1 -->
                <div class="text-center">
                    <div class="flex justify-center items-center mx-auto mb-4 w-12 h-12 rounded-full bg-brand-100 dark:bg-brand-800">
                        <svg class="w-6 h-6 text-brand-800 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.556 8.5h8m-8 3.5H12m7.111-7H4.89a.896.896 0 0 0-.629.256.868.868 0 0 0-.26.619v9.25c0 .232.094.455.26.619A.896.896 0 0 0 4.89 16H9l3 4 3-4h4.111a.896.896 0 0 0 .629-.256.868.868 0 0 0 .26-.619v-9.25a.868.868 0 0 0-.26-.619.896.896 0 0 0-.63-.256Z"/>
                        </svg>
                    </div>
                    <h3 class="mb-2 text-xl font-bold dark:text-white">Capture Customer Feedback</h3>
                    <p class="text-gray-500 dark:text-gray-400">React to messages containing customer feedback to save them as insights. Never lose valuable input again.</p>
                </div>
                <!-- Use Case 2 -->
                <div class="text-center">
                    <div class="flex justify-center items-center mx-auto mb-4 w-12 h-12 rounded-full bg-brand-100 dark:bg-brand-800">
                        <svg class="w-6 h-6 text-brand-800 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 4h3a1 1 0 0 1 1 1v15a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h3m0 3h6m-6 5h6m-6 4h6M10 3v4h4V3h-4Z"/>
                        </svg>
                    </div>
                    <h3 class="mb-2 text-xl font-bold dark:text-white">Create Action Items</h3>
                    <p class="text-gray-500 dark:text-gray-400">Turn discussion threads into trackable tasks with a single command or emoji reaction.</p>
                </div>
                <!-- Use Case 3 -->
                <div class="text-center">
                    <div class="flex justify-center items-center mx-auto mb-4 w-12 h-12 rounded-full bg-brand-100 dark:bg-brand-800">
                        <svg class="w-6 h-6 text-brand-800 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
                        </svg>
                    </div>
                    <h3 class="mb-2 text-xl font-bold dark:text-white">Search Across Workspaces</h3>
                    <p class="text-gray-500 dark:text-gray-400">Find any task, document, or insight with semantic search. Ask questions in natural language.</p>
                </div>
                <!-- Use Case 4 -->
                <div class="text-center">
                    <div class="flex justify-center items-center mx-auto mb-4 w-12 h-12 rounded-full bg-brand-100 dark:bg-brand-800">
                        <svg class="w-6 h-6 text-brand-800 dark:text-brand-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8H5m12 0a1 1 0 0 1 1 1v2.6M17 8l-4-4M5 8a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.6M5 8l4-4 4 4m6 4h-4a2 2 0 1 0 0 4h4a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1Z"/>
                        </svg>
                    </div>
                    <h3 class="mb-2 text-xl font-bold dark:text-white">Stay Aligned</h3>
                    <p class="text-gray-500 dark:text-gray-400">Get weekly summaries of your tasks and activity delivered directly to Slack.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- Use Cases Section end -->

    <!-- Get Started CTA Section start -->
    <section class="bg-gray-50 dark:bg-gray-800">
        <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
            <div class="max-w-screen-md mx-auto text-center">
                <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Get Started</h2>
                <p class="mb-8 font-light text-gray-500 sm:text-xl dark:text-gray-400">Bring AI-powered productivity to your Slack workspace. Setup takes under 5 minutes.</p>
                <div class="flex flex-col items-center justify-center space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4">
                    <a href="https://app.sindre.ai/signup" class="inline-flex items-center justify-center px-4 py-2.5 text-base font-medium text-center text-white bg-brand-700 rounded-lg hover:bg-brand-800 focus:ring-4 focus:ring-brand-300 dark:focus:ring-brand-900">
                        Get started
                    </a>
                    <a href="/slack-setup" class="inline-flex items-center justify-center px-4 py-2.5 text-base font-medium text-center text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
                        Setup guide
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- Get Started CTA Section end -->

    <script src="https://unpkg.com/flowbite@1.5.3/dist/flowbite.js"></script>

    <GeneralFAQ />

    <PrimaryCTA />

    <Footer />

    </body>

</Layout>
