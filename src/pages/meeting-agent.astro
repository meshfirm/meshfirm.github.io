---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import MeetingsFAQ from '../components/MeetingsFAQ.astro';
import IntegrationsMeetings from '../components/IntegrationsMeetings.astro';
import Footer from '../components/Footer.astro';
import MeetingNotesMockup from '../components/MeetingNotesMockup.astro';
import MeetingSummaryMockup from '../components/MeetingSummaryMockup.astro';
import InsightsChartMockup from '../components/InsightsChartMockup.astro';
import SecurityMockup from '../components/SecurityMockup.astro';
---

<Layout>
  <div class="meeting-agent-page">
    <Navbar />

    <!-- ═══════════════════════════════════ HERO ═══════════════════════════════════ -->
    <section class="relative overflow-hidden bg-white dark:bg-gray-900">
      <div class="hero-glow" aria-hidden="true"></div>
      <div class="relative pt-36 lg:pt-48 pb-20 lg:pb-28 px-4 mx-auto max-w-screen-xl">
        <div class="text-center max-w-4xl mx-auto">

          <!-- Badge -->
          <div class="reveal mb-12">
            <span class="inline-flex items-center gap-2.5 px-4 py-2 rounded-full bg-gray-50/80 dark:bg-gray-800/50 border border-gray-200/40 dark:border-gray-700/40 backdrop-blur-sm">
              <img src="/sindre-logo-1024.png" class="w-5 h-5 rounded" alt="" />
              <span class="w-px h-3 bg-gray-200/60 dark:bg-gray-700/50"></span>
              <span class="text-[11px] font-medium tracking-[0.12em] uppercase text-gray-400 dark:text-gray-500">Meeting Agent</span>
            </span>
          </div>

          <!-- Headline -->
          <h1 class="reveal rd1 hero-heading text-gray-900 dark:text-white mb-8">
            Capture meeting insights<br class="hidden sm:block" /> across&nbsp;teams
          </h1>

          <!-- Subtitle -->
          <p class="reveal rd2 text-lg text-gray-500 dark:text-gray-400 max-w-lg mx-auto leading-relaxed mb-14">
            Focus on meaningful conversations with automatic transcription, summarization, and action item creation&nbsp;&mdash; so nothing falls through the&nbsp;cracks.
          </p>

          <!-- CTAs -->
          <div class="reveal rd3 flex flex-col sm:flex-row items-center justify-center gap-3 mb-4">
            <a href="https://app.sindre.ai/login" class="group cta-primary inline-flex items-center px-7 py-3.5 text-white bg-brand-700 hover:bg-brand-800 dark:bg-brand-600 dark:hover:bg-brand-700 rounded-xl text-sm font-medium">
              Get Started
              <svg class="w-3.5 h-3.5 ml-2 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
            </a>
            <a href="#features" class="group inline-flex items-center px-5 py-3.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm font-medium transition-colors duration-300">
              See how it works
              <svg class="w-3.5 h-3.5 ml-1.5 opacity-0 -translate-x-1 transition-all duration-300 group-hover:opacity-50 group-hover:translate-x-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
            </a>
          </div>
          <p class="reveal rd3 text-sm text-gray-400 dark:text-gray-500">14 days free &middot; No credit card required</p>
        </div>

        <!-- Hero Visual -->
        <div class="reveal hero-image-container mt-20 lg:mt-28 max-w-5xl mx-auto relative">
          <div class="hero-image-glow" aria-hidden="true"></div>
          <MeetingNotesMockup />
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════ FEATURE BENTO GRID ═══════════════════════════ -->
    <section id="features" class="bg-gray-50/50 dark:bg-gray-800/20">
      <div class="py-24 lg:py-36 px-4 mx-auto max-w-screen-xl">
        <div class="text-center mb-16 lg:mb-24">
          <h2 class="reveal section-heading text-gray-900 dark:text-white mb-5">Everything you need from<br class="hidden sm:block" /> every&nbsp;meeting</h2>
          <p class="reveal rd1 text-lg text-gray-500 dark:text-gray-400 max-w-lg mx-auto leading-relaxed">Accurate transcription, smart summaries, and actionable insights across all your conversations.</p>
        </div>
        <div class="grid md:grid-cols-6 gap-4">
          <!-- Row 1: 4 + 2 -->
          <div class="reveal rd1 bento-card md:col-span-4 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M10 3v4a1 1 0 0 1-1 1H5m4 8h6m-6-4h6m4-8v16a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V7.914a1 1 0 0 1 .293-.707l3.914-3.914A1 1 0 0 1 9.914 3H18a1 1 0 0 1 1 1Z"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">Accurate Multilingual Transcription</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed max-w-lg">Capture every detail with precision in Danish, English, German, Urdu, and more. Our technology outperforms most transcription services, ensuring no important nuances are missed.</p>
          </div>
          <div class="reveal rd2 bento-card md:col-span-2 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 21l5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 0 1 6-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 0 1-3.827-5.802"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">Company Vocabulary</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed">Custom vocabulary tailored to your organization, capturing jargon and abbreviations&nbsp;accurately.</p>
          </div>

          <!-- Row 2: 2 + 4 -->
          <div class="reveal rd2 bento-card md:col-span-2 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">Smart Task Assignment</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed">Action items automatically generated and assigned to the right team&nbsp;members.</p>
          </div>
          <div class="reveal rd3 bento-card md:col-span-4 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">High-Quality Meeting Summaries</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed max-w-lg">Concise, human-like summaries that capture key points, decisions, and next steps. Every meeting becomes a clear, actionable record.</p>
          </div>

          <!-- Row 3: 3 + 3 -->
          <div class="reveal rd3 bento-card md:col-span-3 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">Actionable Insights</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed">Spot trends and pain points across all your meetings. Data-driven decisions made&nbsp;easy.</p>
          </div>
          <div class="reveal rd4 bento-card md:col-span-3 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 14v3m-3-6V7a3 3 0 1 1 6 0v4m-8 0h10a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1v-7a1 1 0 0 1 1-1Z"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">Secure &amp; GDPR Compliant</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed">On-prem or cloud deployment with TLS&nbsp;1.2 and AES-256 encryption. Your data stays under your&nbsp;control.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Norse Divider -->
    <div class="norse-divider py-4" aria-hidden="true">
      <span class="norse-line"></span>
      <span class="norse-diamond"></span>
      <span class="norse-line"></span>
    </div>

    <!-- ═══════════════════════ SHOWCASE: MEETING SUMMARIES ═══════════════════════ -->
    <section class="bg-white dark:bg-gray-900">
      <div class="py-24 lg:py-36 px-4 mx-auto max-w-screen-xl">
        <div class="gap-12 items-center lg:grid lg:grid-cols-2 xl:gap-24">
          <div class="reveal mb-10 lg:mb-0">
            <h2 class="section-heading text-gray-900 dark:text-white mb-5">Automated summaries and action&nbsp;items</h2>
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed mb-10 max-w-lg">Sindre delivers high-quality, human-like summaries and action items that provide a complete overview of each&nbsp;meeting.</p>
            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M10 3v4a1 1 0 0 1-1 1H5m4 6 2 2 4-4m4-8v16a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V7.914a1 1 0 0 1 .293-.707l3.914-3.914A1 1 0 0 1 9.914 3H18a1 1 0 0 1 1 1Z"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">High-Quality Summaries</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Concise summaries capturing key points and decisions effectively.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9 9 0 1 1 0-18c1.052 0 2.062.18 3 .512M7 9.577l3.923 3.923 8.5-8.5M17 14v6m-3-3h6"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Smart Task Assignment</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Action items automatically assigned to the right team members for streamlined follow-ups.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15a6 6 0 1 0 0-12 6 6 0 0 0 0 12Zm0 0v6M9.5 9A2.5 2.5 0 0 1 12 6.5"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Increased Accountability</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Clearly defined action items ensure all participants know their responsibilities and next steps.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="reveal rd2 relative">
            <MeetingSummaryMockup />
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════ SHOWCASE: CROSS-TEAM INSIGHTS ═══════════════════════ -->
    <section class="bg-gray-50/50 dark:bg-gray-800/20">
      <div class="py-24 lg:py-36 px-4 mx-auto max-w-screen-xl">
        <div class="gap-12 items-center lg:grid lg:grid-cols-2 xl:gap-24">
          <div class="reveal rd1 relative order-last lg:order-first mb-10 lg:mb-0">
            <InsightsChartMockup />
          </div>
          <div class="reveal">
            <h2 class="section-heading text-gray-900 dark:text-white mb-5">Cross-team insights and&nbsp;collaboration</h2>
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed mb-10 max-w-lg">Foster collaboration and shared insights across teams without needing to attend every&nbsp;meeting.</p>
            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M20 13V6a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v7m16 0v5a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-5m16 0h-2.586a1 1 0 0 0-.707.293l-2.414 2.414a1 1 0 0 1-.707.293h-3.172a1 1 0 0 1-.707-.293l-2.414-2.414A1 1 0 0 0 6.586 13H4"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Sales Meeting Feedback</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Stay informed about commitments made to customers and align product strategies accordingly.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Customer Interviews</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Valuable insights from interviews enhance understanding of customer needs and preferences.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m6.75 7.5 3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0 0 21 18V6a2.25 2.25 0 0 0-2.25-2.25H5.25A2.25 2.25 0 0 0 3 6v12a2.25 2.25 0 0 0 2.25 2.25Z"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Engineering Updates</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Stay updated on critical engineering discussions and tech decisions that affect the product.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════ SHOWCASE: SECURITY ═══════════════════════ -->
    <section class="bg-white dark:bg-gray-900">
      <div class="py-24 lg:py-36 px-4 mx-auto max-w-screen-xl">
        <div class="gap-12 items-center lg:grid lg:grid-cols-2 xl:gap-24">
          <div class="reveal mb-10 lg:mb-0">
            <h2 class="section-heading text-gray-900 dark:text-white mb-5">Security and&nbsp;compliance</h2>
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed mb-10 max-w-lg">Keep your sensitive information secure and compliant with flexible deployment&nbsp;options.</p>
            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5.25 14.25h13.5m-13.5 0a3 3 0 0 1-3-3m3 3a3 3 0 1 0 0 6h13.5a3 3 0 1 0 0-6m-16.5-3a3 3 0 0 1 3-3h13.5a3 3 0 0 1 3 3m-19.5 0a4.5 4.5 0 0 1 .9-2.7L5.737 5.1a3.375 3.375 0 0 1 2.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 0 1 .9 2.7m0 0a3 3 0 0 1-3 3m0 3h.008v.008h-.008v-.008Zm0-6h.008v.008h-.008v-.008Zm-3 6h.008v.008h-.008v-.008Zm0-6h.008v.008h-.008v-.008Z"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">On-Prem or Cloud Deployment</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Choose between local or cloud-based deployment to fit your security and operational needs.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Secure Data Handling</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">TLS 1.2 and AES-256 encryption ensures your data is transmitted and stored securely.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 4h3a1 1 0 0 1 1 1v15a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h3m0 3h6m-6 7 2 2 4-4m-5-9v4h4V3h-4Z"/></svg>
                </div>
