---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import GeneralFAQ from '../components/GeneralFAQ.astro';
import Footer from '../components/Footer.astro';
import MeetingSummaryMockup from '../components/MeetingSummaryMockup.astro';
import MeetingNotesMockup from '../components/MeetingNotesMockup.astro';
import InsightsChartMockup from '../components/InsightsChartMockup.astro';
import SecurityMockup from '../components/SecurityMockup.astro';
---

<Layout>
  <div class="home-page">
    <Navbar />

    <!-- ═══════════════════════════════════ HERO ═══════════════════════════════════ -->
    <section class="relative overflow-hidden bg-white dark:bg-gray-900">
      <div class="hero-glow" aria-hidden="true"></div>
      <div class="relative pt-36 lg:pt-48 pb-20 lg:pb-28 px-4 mx-auto max-w-screen-xl">
        <div class="text-center max-w-4xl mx-auto">

          <!-- Badge -->
          <div class="reveal mb-12">
            <span class="inline-flex items-center gap-2.5 px-4 py-2 rounded-full bg-gray-50/80 dark:bg-gray-800/50 border border-gray-200/40 dark:border-gray-700/40 backdrop-blur-sm">
              <img src="/sindre-logo-1024.png" class="w-5 h-5 rounded" alt="" />
              <span class="w-px h-3 bg-gray-200/60 dark:bg-gray-700/50"></span>
              <span class="text-[11px] font-medium tracking-[0.12em] uppercase text-gray-400 dark:text-gray-500">AI Product Manager</span>
            </span>
          </div>

          <!-- Headline -->
          <h1 class="reveal rd1 hero-heading text-gray-900 dark:text-white mb-8">
            Launch products that truly meet<br class="hidden sm:block" /> customer&nbsp;needs
          </h1>

          <!-- Subtitle -->
          <p class="reveal rd2 text-lg text-gray-500 dark:text-gray-400 max-w-lg mx-auto leading-relaxed mb-14">
            Your AI product manager that captures insights from meetings, analyzes feedback, and builds product sense&nbsp;&mdash; so you can focus on&nbsp;strategy.
          </p>

          <!-- CTAs -->
          <div class="reveal rd3 flex flex-col sm:flex-row items-center justify-center gap-3 mb-4">
            <a href="https://app.sindre.ai/login" class="group cta-primary inline-flex items-center px-7 py-3.5 text-white bg-brand-700 hover:bg-brand-800 dark:bg-brand-600 dark:hover:bg-brand-700 rounded-xl text-sm font-medium">
              Get Started
              <svg class="w-3.5 h-3.5 ml-2 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
            </a>
            <a href="#features" class="group inline-flex items-center px-5 py-3.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm font-medium transition-colors duration-300">
              See how it works
              <svg class="w-3.5 h-3.5 ml-1.5 opacity-0 -translate-x-1 transition-all duration-300 group-hover:opacity-50 group-hover:translate-x-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
            </a>
          </div>
          <p class="reveal rd3 text-sm text-gray-400 dark:text-gray-500">14 days free &middot; No credit card required</p>
        </div>

        <!-- Hero Visual -->
        <div class="reveal hero-image-container mt-20 lg:mt-28 max-w-5xl mx-auto relative">
          <div class="hero-image-glow" aria-hidden="true"></div>
          <MeetingSummaryMockup />
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════ TRUSTED BY ═══════════════════════════════ -->
    <section class="bg-white dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800/60">
      <div class="py-12 lg:py-16 px-4 mx-auto max-w-screen-xl">
        <div class="reveal flex flex-col items-center">
          <p class="text-[11px] font-medium tracking-[0.12em] uppercase text-gray-400 dark:text-gray-500 mb-8">Trusted by product teams</p>
          <div class="flex items-center gap-10 md:gap-16 flex-wrap justify-center opacity-50 dark:opacity-40">
            <img src="/mesh-firm-logo.png" class="h-5 dark:hidden" alt="Mesh Firm" />
            <img src="/mesh-firm-logo-inverted.png" class="h-5 hidden dark:block" alt="Mesh Firm" />
            <img src="/indus-valley-labs-logo.png" class="h-5 dark:hidden" alt="Indus Valley Labs" />
            <img src="/indus-valley-labs-inverted.png" class="h-5 hidden dark:block" alt="Indus Valley Labs" />
            <img src="/wowbuddies-logo.png" class="h-5 dark:hidden" alt="WowBuddies" />
            <img src="/wowbuddies-logo-inverted.png" class="h-5 hidden dark:block" alt="WowBuddies" />
            <img src="/artelize-logo.png" class="h-5 dark:hidden" alt="Artelize" />
            <img src="/artelize-logo-inverted.png" class="h-5 hidden dark:block" alt="Artelize" />
            <img src="/delogue-logo.png" class="h-5 dark:hidden" alt="Delogue" />
            <img src="/delogue-logo-inverted.png" class="h-5 hidden dark:block" alt="Delogue" />
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════ FEATURE BENTO GRID ═══════════════════════════ -->
    <section id="features" class="bg-gray-50/50 dark:bg-gray-800/20">
      <div class="py-24 lg:py-36 px-4 mx-auto max-w-screen-xl">
        <div class="text-center mb-16 lg:mb-24">
          <h2 class="reveal section-heading text-gray-900 dark:text-white mb-5">Everything you need to build<br class="hidden sm:block" /> better&nbsp;products</h2>
          <p class="reveal rd1 text-lg text-gray-500 dark:text-gray-400 max-w-lg mx-auto leading-relaxed">AI-powered product management that keeps your team aligned and your customers heard.</p>
        </div>
        <div class="grid md:grid-cols-6 gap-4">
          <!-- Row 1: 4 + 2 -->
          <div class="reveal rd1 bento-card md:col-span-4 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">Meeting Summaries &amp; Action Items</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed max-w-lg">Accurate summaries and action items after every meeting. Key discussion points captured and decisions tracked so nothing falls through the cracks.</p>
          </div>
          <div class="reveal rd2 bento-card md:col-span-2 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 14v3m-3-6V7a3 3 0 1 1 6 0v4m-8 0h10a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1v-7a1 1 0 0 1 1-1Z"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">Secure &amp; Compliant</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed">GDPR compliant with on&#8209;prem hosting options. Your data stays under your&nbsp;control.</p>
          </div>

          <!-- Row 2: 2 + 4 -->
          <div class="reveal rd2 bento-card md:col-span-2 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">AI PM Agent</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed">Builds knowledge from your discussions and conversations&nbsp;automatically.</p>
          </div>
          <div class="reveal rd3 bento-card md:col-span-4 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M10 3v4a1 1 0 0 1-1 1H5m4 10v-2m3 2v-6m3 6v-3m4-11v16a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V7.914a1 1 0 0 1 .293-.707l3.914-3.914A1 1 0 0 1 9.914 3H18a1 1 0 0 1 1 1Z"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">Customer Feedback Analysis</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed max-w-lg">Understand customer pain points and turn qualitative feedback into quantitative insights for better prioritization.</p>
          </div>

          <!-- Row 3: 3 + 3 -->
          <div class="reveal rd3 bento-card md:col-span-3 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M20 13V6a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v7m16 0v5a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-5m16 0h-2.586a1 1 0 0 0-.707.293l-2.414 2.414a1 1 0 0 1-.707.293h-3.172a1 1 0 0 1-.707-.293l-2.414-2.414A1 1 0 0 0 6.586 13H4"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">Sales &amp; Customer Conversations</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed">Stay close to customers with every sales and customer meeting always at&nbsp;hand.</p>
          </div>
          <div class="reveal rd4 bento-card md:col-span-3 p-8 lg:p-10 rounded-2xl border border-gray-200/60 dark:border-gray-700/30 bg-white dark:bg-gray-800/40">
            <div class="bento-icon w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700/50 flex items-center justify-center mb-6">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z"/></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 tracking-[-0.01em]">AI Project Manager</h3>
            <p class="text-gray-500 dark:text-gray-400 leading-relaxed">Precise, well&#8209;formulated tickets created automatically from conversations and&nbsp;decisions.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Norse Divider -->
    <div class="norse-divider py-4" aria-hidden="true">
      <span class="norse-line"></span>
      <span class="norse-diamond"></span>
      <span class="norse-line"></span>
    </div>

    <!-- ═══════════════════════ SHOWCASE: MEETING INTELLIGENCE ═══════════════════════ -->
    <section class="bg-white dark:bg-gray-900">
      <div class="py-24 lg:py-36 px-4 mx-auto max-w-screen-xl">
        <div class="gap-12 items-center lg:grid lg:grid-cols-2 xl:gap-24">
          <div class="reveal mb-10 lg:mb-0">
            <h2 class="section-heading text-gray-900 dark:text-white mb-5">Productive meetings, aligned&nbsp;teams</h2>
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed mb-10 max-w-lg">Sindre joins as an engaged coworker&nbsp;&mdash; capturing smart notes, discussion points, and action items so you can focus on the&nbsp;conversation.</p>
            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Smart Note-Taking</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Automatically records essential details, ensuring nothing is missed.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Best Practice Insights</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Shares relevant PM suggestions tailored to your discussions.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Task Management</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Assigns tasks during meetings and keeps track of deadlines.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="reveal rd2 relative">
            <MeetingNotesMockup />
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════ SHOWCASE: CUSTOMER INSIGHTS ═══════════════════════ -->
    <section class="bg-gray-50/50 dark:bg-gray-800/20">
      <div class="py-24 lg:py-36 px-4 mx-auto max-w-screen-xl">
        <div class="gap-12 items-center lg:grid lg:grid-cols-2 xl:gap-24">
          <div class="reveal rd1 relative order-last lg:order-first mb-10 lg:mb-0">
            <InsightsChartMockup />
          </div>
          <div class="reveal">
            <h2 class="section-heading text-gray-900 dark:text-white mb-5">Escape the build trap with customer&nbsp;insights</h2>
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed mb-10 max-w-lg">Gain deep understanding of your customers, make informed decisions, and drive growth with actionable&nbsp;insights.</p>
            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75 2.25 12l4.179 2.25m0-4.5 5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0 4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0-5.571 3-5.571-3"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Multi-Source Data</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Aggregate feedback, usage analytics, and market research in one place.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Continuous Discovery</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Align your product with evolving customer needs automatically.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 0 0 6 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0 1 18 16.5h-2.25m-7.5 0h7.5m-7.5 0-1 3m8.5-3 1 3m0 0 .5 1.5m-.5-1.5h-9.5m0 0-.5 1.5"/></svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Actionable Insights</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Clear recommendations to guide product development and customer engagement.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════ SHOWCASE: FLEXIBLE DEPLOYMENT ═══════════════════════ -->
    <section class="bg-white dark:bg-gray-900">
      <div class="py-24 lg:py-36 px-4 mx-auto max-w-screen-xl">
        <div class="gap-12 items-center lg:grid lg:grid-cols-2 xl:gap-24">
          <div class="reveal mb-10 lg:mb-0">
            <h2 class="section-heading text-gray-900 dark:text-white mb-5">Every organization has unique&nbsp;needs</h2>
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed mb-10 max-w-lg">Flexible solutions that put you in control of your data and infrastructure.</p>
            <div class="space-y-6">
