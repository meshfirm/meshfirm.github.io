---
import Layout from './Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { formatCategoryTitle } from '../lib/content-loader';

interface Props {
  title: string;
  frontmatter: Record<string, any>;
  htmlContent: string;
  githubUrl: string;
  repoSlug: string;
  repoTitle: string;
  collectionId: string;
  collectionTitle: string;
  category: string | null;
  url: string;
}

const {
  title,
  frontmatter,
  htmlContent,
  githubUrl,
  repoSlug,
  repoTitle,
  collectionId,
  collectionTitle,
  category,
  url,
} = Astro.props;

// Build breadcrumb items
const breadcrumbs = [
  { label: 'Toolkit', href: '/toolkit/' },
  { label: repoTitle, href: `/toolkit/${repoSlug}/` },
  { label: collectionTitle, href: `/toolkit/${repoSlug}/${collectionId}/` },
];
if (category) {
  breadcrumbs.push({
    label: formatCategoryTitle(category),
    href: `/toolkit/${repoSlug}/${collectionId}/${category}/`,
  });
}
breadcrumbs.push({ label: title, href: url });

const tags = frontmatter.tags || [];
const relatedFrameworks = frontmatter.related_frameworks || [];
const sourceGuest = frontmatter.source_guest;
const sourceEpisode = frontmatter.source_episode;
const oneLiner = frontmatter.one_liner;
const difficulty = frontmatter.difficulty;
const timeCommitment = frontmatter.time_commitment;
const targetAudience = frontmatter.target_audience;

// Back link
const backHref = category
  ? `/toolkit/${repoSlug}/${collectionId}/${category}/`
  : `/toolkit/${repoSlug}/${collectionId}/`;
const backLabel = category ? formatCategoryTitle(category) : collectionTitle;
---

<Layout>
  <Navbar />

  <div class="toolkit-content-page">
    <div class="pt-20 lg:pt-24 pb-16 lg:pb-24 bg-white dark:bg-gray-900">
      <div class="px-4 mx-auto max-w-screen-xl">

        <!-- Breadcrumbs -->
        <nav class="mb-6" aria-label="Breadcrumb">
          <ol class="flex flex-wrap items-center gap-1 text-sm text-gray-500 dark:text-gray-400">
            {breadcrumbs.map((crumb, i) => (
              <li class="flex items-center">
                {i > 0 && (
                  <svg class="w-3 h-3 mx-1.5 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                )}
                {i === breadcrumbs.length - 1 ? (
                  <span class="text-gray-900 dark:text-white font-medium truncate max-w-[200px]">{crumb.label}</span>
                ) : (
                  <a href={crumb.href} class="hover:text-gray-900 dark:hover:text-white transition-colors whitespace-nowrap">
                    {crumb.label}
                  </a>
                )}
              </li>
            ))}
          </ol>
        </nav>

        <!-- Page title area -->
        <div class="mb-8 lg:mb-10">
          <h1 class="text-3xl md:text-4xl font-semibold text-gray-900 dark:text-white tracking-tight mb-3">{title}</h1>

          {oneLiner && (
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed max-w-3xl">{oneLiner}</p>
          )}

          <!-- Meta row -->
          <div class="flex flex-wrap items-center gap-3 mt-4">
            {sourceGuest && (
              <div class="flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400">
                <svg class="w-3.5 h-3.5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z"/>
                </svg>
                <span>{sourceGuest}</span>
              </div>
            )}
            {sourceEpisode && (
              <div class="flex items-center gap-1.5 text-sm text-gray-400 dark:text-gray-500">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 18.75a6 6 0 0 0 6-6v-1.5m-6 7.5a6 6 0 0 1-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 0 1-3-3V4.5a3 3 0 1 1 6 0v8.25a3 3 0 0 1-3 3Z"/>
                </svg>
                <span>{sourceEpisode}</span>
              </div>
            )}
            {difficulty && (
              <span class="px-2 py-0.5 text-xs font-medium text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-700/50 rounded">{difficulty}</span>
            )}
            {timeCommitment && (
              <div class="flex items-center gap-1.5 text-sm text-gray-400 dark:text-gray-500">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                </svg>
                <span>{timeCommitment}</span>
              </div>
            )}
          </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-10 lg:gap-14">

          <!-- Main content -->
          <article class="flex-1 min-w-0">

            {targetAudience && (
              <div class="mb-8 p-4 rounded-lg bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700/50">
                <div class="flex items-center gap-2 mb-1.5">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z"/>
                  </svg>
                  <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Target audience</span>
                </div>
                <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">{targetAudience}</p>
              </div>
            )}

            <div
              class="prose prose-gray dark:prose-invert max-w-none
                prose-headings:font-semibold
                prose-h1:text-3xl prose-h1:mb-6
                prose-h2:text-2xl prose-h2:mt-10 prose-h2:mb-4
                prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3
                prose-p:leading-relaxed prose-p:text-gray-600 dark:prose-p:text-gray-300
                prose-a:text-brand-600 dark:prose-a:text-brand-400 prose-a:no-underline hover:prose-a:underline
                prose-blockquote:border-brand-300 dark:prose-blockquote:border-brand-600 prose-blockquote:text-gray-600 dark:prose-blockquote:text-gray-300 prose-blockquote:not-italic
                prose-code:bg-gray-100 dark:prose-code:bg-gray-800 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:before:content-[''] prose-code:after:content-['']
                prose-pre:bg-gray-50 dark:prose-pre:bg-gray-800/50 prose-pre:border prose-pre:border-gray-200 dark:prose-pre:border-gray-700
                prose-table:text-sm
                prose-th:text-left prose-th:font-semibold prose-th:text-gray-700 dark:prose-th:text-gray-300
                prose-td:text-gray-600 dark:prose-td:text-gray-400
                prose-li:text-gray-600 dark:prose-li:text-gray-300
                prose-strong:text-gray-900 dark:prose-strong:text-white
                prose-hr:border-gray-200 dark:prose-hr:border-gray-700"
              set:html={htmlContent}
            />

            <!-- Bottom nav -->
            <div class="mt-12 pt-8 border-t border-gray-100 dark:border-gray-800">
              <a href={backHref} class="inline-flex items-center gap-2 text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
                </svg>
                Back to {backLabel}
              </a>
            </div>
          </article>

          <!-- Sidebar -->
          <aside class="lg:w-64 flex-shrink-0">
            <div class="lg:sticky lg:top-24 space-y-4">

              <!-- View on GitHub -->
              <a href={githubUrl} target="_blank" rel="noopener noreferrer"
                class="flex items-center gap-2.5 px-4 py-3 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700/50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700/50 transition-colors">
                <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                View on GitHub
                <svg class="w-3 h-3 ml-auto text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"/>
                </svg>
              </a>

              <!-- Tags -->
              {tags.length > 0 && (
                <div class="p-4 rounded-lg bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700/50">
                  <h3 class="text-[11px] font-semibold uppercase tracking-wider text-gray-400 dark:text-gray-500 mb-3">Tags</h3>
                  <div class="flex flex-wrap gap-1.5">
                    {tags.map((tag: string) => (
                      <span class="px-2 py-0.5 text-xs font-medium text-gray-600 dark:text-gray-300 bg-gray-100 dark:bg-gray-700/50 rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              )}

              <!-- Attribution -->
              <div class="p-4 rounded-lg bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700/50">
                <p class="text-xs text-gray-500 dark:text-gray-400 leading-relaxed">
                  Content from <a href={`/toolkit/${repoSlug}/`} class="font-medium text-gray-700 dark:text-gray-300 hover:underline">{repoTitle}</a>.
                  Use with <a href="https://claude.ai/code" target="_blank" rel="noopener noreferrer" class="font-medium text-gray-700 dark:text-gray-300 hover:underline">Claude Code</a> for personalized coaching.
                </p>
              </div>

            </div>
          </aside>
        </div>
      </div>
    </div>

    <Footer />
  </div>
</Layout>

<style>
  .toolkit-content-page {
    font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, sans-serif;
  }
</style>
